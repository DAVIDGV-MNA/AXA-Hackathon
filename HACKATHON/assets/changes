class QueryIn(BaseModel):
    query: str
    history: List[Dict[str, Any]] = []
    top_k: int = 5
    doc_types: List[str] = []        # e.g., ["policy", "process"]
    must_keywords: List[str] = []    # e.g., ["privacy", "billing"]
    include_paths: List[str] = []    # substrings to include
    exclude_paths: List[str] = []    # substrings to exclude