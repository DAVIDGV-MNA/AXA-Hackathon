<script src="https://unpkg.com/lucide@latest"></script>
<script>document.addEventListener('DOMContentLoaded', () => lucide.createIcons());</script>


.icon{
  width:22px; height:22px; vertical-align:-2px; stroke-width:1.75; color:var(--icon);
}
.nav-item .icon{ margin-right:8px; }

<nav class="nav">
  <a href="index.html" class="nav-item">
    <i data-lucide="message-square" class="icon"></i> <span>Chat</span>
  </a>
  <a href="documents.html" class="nav-item">
    <i data-lucide="file-text" class="icon"></i> <span>Documents</span>
  </a>
  <a href="upload.html" class="nav-item active">
    <i data-lucide="upload" class="icon"></i> <span>Upload</span>
  </a>
</nav>

<a href="index.html" class="nav-item active">
  <i data-lucide="message-square" class="icon"></i> Chat
</a>
<a href="documents.html" class="nav-item">
  <i data-lucide="file-text" class="icon"></i> Documents
</a>
<a href="upload.html" class="nav-item">
  <i data-lucide="upload" class="icon"></i> Upload
</a>

<script>
  const page = (location.pathname.split('/').pop() || 'index.html').toLowerCase();
  document.querySelectorAll('.nav a').forEach(a=>{
    const target = (a.getAttribute('href')||'').toLowerCase();
    if (page === target) a.classList.add('active');
  });
</script>

const path = require("path");
app.use("/", express.static(path.join(__dirname, "public")));
