const PORT = process.env.PORT || 3001;

app.listen(PORT, () => {
  console.log(`SecureGPT proxy + File API running on http://localhost:${PORT}`);
  console.table({
    'Files list': 'GET  /api/files',
    'Upload':     'POST /api/files (multipart: files[], category)',
    'Open file':  'GET  /files/<uuid>.<ext>',
    'Delete':     'DELETE /api/files/:id'
  });
});
