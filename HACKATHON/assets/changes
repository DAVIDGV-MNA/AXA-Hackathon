
<style>
:root{
  --panel:#ffffff; 
  --border:#e5e7eb; 
  --text:#111827; 
  --muted:#6b7280; 
  --tile:#f9fafb;
}
.mode-btn{border:1px solid var(--border); padding:6px 10px; border-radius:8px; background:var(--panel); cursor:pointer;}
.mode-btn.active{background:#111827; color:#fff; border-color:#111827;}
.search-box{border:1px solid var(--border); padding:8px 10px; border-radius:8px; width:100%;}
.document-card{border:1px solid var(--border); border-radius:10px; background:var(--panel); padding:12px;}
.doc-icon .icon{width:16px;height:16px;}
</style>

<div id="docuRoot" style="max-width:1100px;margin:0 auto;padding:16px 24px;">
  <!-- Documents Library -->
  <section id="documentsView" style="display:block;">
    <div style="display:flex;gap:8px;align-items:center;margin-bottom:12px;">
      <input id="docSearch" class="search-box" placeholder="Search documents..." style="max-width:320px;">
      <button id="refreshDocs" class="mode-btn">Refresh</button>
    </div>
    <div id="docGrid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(280px,1fr));gap:12px;"></div>
  </section>

  <!-- Upload Center -->
  <section id="uploadView" style="display:block;margin-top:24px;">
    <div style="display:flex;gap:12px;align-items:center;margin-bottom:12px;">
      <label style="font-size:12px;color:var(--muted);">Category</label>
      <select id="uploadCategory" class="search-box" style="max-width:220px;">
        <option>Operations</option>
        <option>Politics</option>
        <option>Manual</option>
      </select>
      <input id="filesInput" type="file" multiple accept=".pdf,.doc,.docx,.txt">
      <button id="startUpload" class="mode-btn active">Start Upload</button>
    </div>
    <div id="uploadMsg" style="font-size:12px;color:var(--muted);"></div>
  </section>
</div>

<script>
(function(){
  const API = 'http://localhost:3001/api';

  // Hide chat areas while we stand up Documents/Upload
  document.querySelector('.chat-area')?.style && (document.querySelector('.chat-area').style.display='none');
  document.querySelector('.input-area')?.style && (document.querySelector('.input-area').style.display='none');

  // Elements
  const docGrid = document.getElementById('docGrid');
  const docSearch = document.getElementById('docSearch');
  const refreshDocs = document.getElementById('refreshDocs');
  const filesInput = document.getElementById('filesInput');
  const uploadCategory = document.getElementById('uploadCategory');
  const startUpload = document.getElementById('startUpload');
  const uploadMsg = document.getElementById('uploadMsg');

  if(!docGrid){ console.warn('docGrid not found ‚Äî check that sections are inside your main content wrapper.'); return; }

  let allDocs = [];

  // ---- API helpers
  async function listFiles(){
    const r = await fetch(`${API}/files`);
    if(!r.ok) throw new Error('List failed: '+r.status);
    return r.json();
  }
  async function delFile(id){
    const r = await fetch(`${API}/files/${id}`, { method:'DELETE' });
    if(!r.ok) throw new Error('Delete failed: '+r.status);
  }

  // ---- Render
  function render(){
    const q = (docSearch?.value || '').toLowerCase();
    const filtered = allDocs.filter(d =>
      d.name.toLowerCase().includes(q) ||
      (d.category||'').toLowerCase().includes(q)
    );
    docGrid.innerHTML = filtered.length ? filtered.map(card).join('') : `<div style="color:var(--muted);">No documents</div>`;

    // bind delete buttons
    docGrid.querySelectorAll('[data-del]').forEach(btn=>{
      btn.onclick = async () => {
        if(!confirm('Delete this file?')) return;
        try { await delFile(btn.dataset.del); await load(); }
        catch(e){ alert('Delete failed'); console.error(e); }
      };
    });
  }
  function card(d){
    const size = (d.size/1024/1024).toFixed(1) + ' MB';
    const date = new Date(d.uploadedAt).toLocaleDateString();
    return `
      <div class="document-card">
        <div style="display:flex;justify-content:space-between;align-items:center;">
          <div style="font-weight:600;max-width:70%;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;" title="${d.name}">${d.name}</div>
          <button class="mode-btn" data-del="${d.id}" title="Delete">üóë</button>
        </div>
        <div style="font-size:12px;color:var(--muted);margin:6px 0;">${date} ‚Ä¢ ${size}</div>
        <div style="display:flex;gap:8px;align-items:center;">
          <span style="font-size:12px;padding:3px 8px;border:1px solid var(--border);border-radius:999px;">${d.category}</span>
          <a href="http://localhost:3001${d.path}" target="_blank" class="mode-btn">Open</a>
        </div>
      </div>`;
  }

  // ---- Load & events
  async function load(){
    try { allDocs = await listFiles(); }
    catch(e){ console.error(e); allDocs = []; }
    render();
  }
  refreshDocs?.addEventListener('click', load);
  docSearch?.addEventListener('input', render);

  startUpload?.addEventListener('click', async ()=>{
    const files = filesInput?.files;
    if(!files || !files.length){ uploadMsg.textContent='Pick files first'; return; }
    const fd = new FormData();
    [...files].forEach(f => fd.append('files', f)); // must be 'files'
    fd.append('category', uploadCategory?.value || 'Uncategorized');

    startUpload.disabled = true; startUpload.textContent='Uploading‚Ä¶'; uploadMsg.textContent='';
    try{
      const r = await fetch(`${API}/files`, { method:'POST', body: fd });
      if(!r.ok) throw new Error(await r.text());
      await r.json();
      filesInput.value = '';
      uploadMsg.textContent = 'Upload complete ‚úÖ';
      await load();
    }catch(e){
      console.error(e);
      uploadMsg.textContent = 'Upload failed ‚ùå';
    }finally{
      startUpload.disabled = false; startUpload.textContent='Start Upload';
    }
  });

  // initial
  load();
})();
</script>
